{% extends "../layout/base.twig" %}


{% block content %}

    {% for chapter in chapters %}

        {% for component in chapter.components %}

            {# @WARNING include with a list of partials does not work with twig.js #}
            {# https://github.com/twigjs/twig.js/issues/468 #}

            {% set path = '../components/' ~ component.slug ~ '/' ~ component.slug ~ '.twig' %}

            <code>
                {{path}}
            </code>

            {% include path ignore missing with { c : component.value } %}

        {% endfor %}

    {% endfor %}

{% endblock %}
